             & pytanie_2 = "nie" 
             & pytanie_1 = 5;

   0006: rodzaj_auta ( auto ) = "Toyota Yaris od 37.000zł " if
             pytanie_5 = "nieco większy kompakt" 
             & ( pytanie_3 >= 37000 
