knowledge base wybór_auta_rodzinnego

facets

  ask     yes;
  single  yes;

  pytanie_1 :
     ask     yes
     single  yes
     val range  
        < 1, 5 >;


  pytanie_2 :
     ask     yes
     single  yes
     val oneof  
     { 
        "tak",
        "nie"
     };


  pytanie_4 :
     ask     yes
     single  yes
     val oneof  
     { 
        "mniejsze, ekonomiczniejsze auto",
        "większe i komfortowe, ale mniej ekonomiczne auto  "
     };

  pytanie_5 :
     ask     yes
     single  yes
     val oneof  
     { 
        "typowo miejskie, zwinne auto",
        "nieco większy kompakt"
     };

  rodzaj_auta :
     ask     yes
     single  yes
     val oneof  
     { 
        "Toyota AYGO od 34.000 zł",
        "Toyota Yaris od 37.000zł ",
        "Toyota Yaris od 37.000zł lub VW Polo od 40.000zł",
        "brak auta",
        "Toyota Yaris od 37.000zł, VW Polo od 40.000zł lub Ford Fiesta od 45.000zł",
        "Toyota Corolla od 60.000zł",
        "Toyota Corolla od 60.000zł lub VW Jetta od 72.000zł",
        "Toyota Corolla od 60.000zł, VW Jetta od 72.000zł lub Ford Mondeo od 95.000zł",
        "Toyota AYGO od 34.000 zł lub Ford Ka od 38.000zł",
        "Toyota AYGO od 34.000 zł, Ford Ka od 38.000zł lub VW Up! od 40.000zł"
     };

  pytanie_3 :
     ask     yes
     single  yes
     val range  
        < 1, 2e+05 >;

end; // facets

rules

   0001: rodzaj_auta ( auto ) = "brak auta" if
             pytanie_3 < 37000 
             & pytanie_2 = "nie" 
             & pytanie_1 = 5;

   0002: rodzaj_auta ( auto ) = "brak auta" if
             pytanie_3 < 60000 
             & pytanie_2 = "tak" 
             & pytanie_1 = 5;

   0003: rodzaj_auta ( auto ) = "brak auta" if
