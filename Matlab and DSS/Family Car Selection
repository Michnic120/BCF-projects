control

// *********************************************
// * Aplikacja uruchamiana w oknie, wyposażona *
// * w menu sterujące i winietę informacyjną.  *
// *********************************************

// deklaracja zmiennych

char Text1;
char Text2;
char Text3;

// automatyczne uruchomienie aplikacji

	run;

	Text1 := "Pomoc w wyborze samochodu osobowego";
	Text2 := "Informacje dodatkowe\nTekst 2 bazy wiedzy\nWydawca";
	Text3 := "© 1999, Tekst 3/Firma";

// utworzenie okna głównego aplikacji

	createAppWindow;
	setAppWinTitle( Text1 );
                        
// winieta - informacja o programie

	vignette( Text1, Text2, Text3 );

// menu sterujące programu

	
 menu "Menu programu"
      1. "Znajdź samochód osobowy dla siebie"
      2. "Wyjście"

	case 1:

 //pytanie 1


int IloscOsob, Indeks, Budzet, Indeks2;

 neditBox(0, 0, 1, 5, "Podaj ilość osób w rodzinie", IloscOsob);
 addFact(_, pytanie_1, IloscOsob);

//pytanie 2

	
char Wakacje[2];
Wakacje[0]:= "tak";
Wakacje[1]:= "nie";


 slistBox(0, 0, "Określenie potrzeb klienta", "Czy będziesz wybierał się na wakacje z całą rodziną?", Wakacje, 2, Indeks);

addFact(_, pytanie_2, Wakacje[Indeks]);

char FaktWakacje;

 catchFact(FaktWakacje, _, "pytanie_2", "tak", 0);
 catchFact(FaktWakacje, _, "pytanie_2", "nie", 1);	
	
//pytanie 3

 neditBox(0, 0, 1, 200000, "Podaj swój budżet", Budzet);
 addFact(_, pytanie_3, Budzet);


 //pytanie 4


char Ekonomia[2];
Ekonomia[0]:= "mniejsze, ekonomiczniejsze auto";
Ekonomia[1]:= "większe i komfortowe, ale mniej ekonomiczne auto";

slistBox(0, 0, "Określenie potrzeb klienta", "Bardziej Ci zależy na samochodzie bardziej komfortowym czy ekonomiczniejszym?", Ekonomia, 2, Indeks2);

addFact(_, pytanie_4, Ekonomia[Indeks2]);

char FaktEkonomia;

 catchFact(FaktEkonomia, _, "pytanie_4", "mniejsze, ekonomiczniejsze auto", 0);
 catchFact(FaktEkonomia, _, "pytanie_4", "większe i komfortowe, ale mniej ekonomiczne auto", 1);


//pytanie 5


char Miejskie[2];
Miejskie[0]:= "typowo miejskie, zwinne auto";
Miejskie[1]:= "nieco większy kompakt";

slistBox(0, 0, "Określenie potrzeb klienta", "Bardziej Ci zależy na samochodzie miejskim czy kompaktowym?", Miejskie, 2, Indeks);

addFact(_, pytanie_5, Miejskie[Indeks]);

char FaktMiejskie;

 catchFact(FaktMiejskie, _, "pytanie_5", "typowo miejskie, zwinne auto", 0);
 catchFact(FaktMiejskie, _, "pytanie_5", "nieco większy kompakt", 1);	

 
	

	case 2:

		exit;  // zamknięcie aplikacji

	end;

end;

end; // knowledge base
