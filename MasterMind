#include<iostream>
#include<string>
#include<vector>

using namespace std;

int main()
{
  vector<char> code = {'v','v','r','r'} , guess, hints;
  vector<bool> hintBool(4,0);
  char c; short m, n=0, g;

  code.reserve(4); guess.reserve(4), hints.reserve(4);

cout<<"Enter the color\nr - red\nb - blue\ng - green\ny - yellow\nv - violet\no - orange\n";

while(n<10)
    {
      m=0;
      for(int i=0;i<4;)
       {
        cin>>c;
        if(c=='r' || c=='b' || c=='g' || c=='y' || c=='v' || c=='o'){guess[i]=c; i++;}
         else cout<<"Wrong color!"<<endl;
       }

      for(int i=0;i<4;i++)
        {
          if(guess[i] == code[i]) {hints[m] ='O'; hintBool[i] = true; m++;}
        }

      if(m==4) break;  g=m;

       for(int i=0;i<4;i++)
          if(hintBool[i]==0)
            {
              for(int j=0;j<4;j++)
                if(guess[i]==code[j] && hintBool[j]==0) {hints[g]='o'; code[j]='.'; g++;}
            }

        for(int i=0;i<4;i++)
            {
                if(hints[i]!= 'o' && hints[i]!= 'O') hints[i]='.';
                cout<<hints[i]; hints[i]='.'; hintBool[i]=0;
            }
        cout<<endl<<"Try again"<<endl;
        n++;
    }
}
