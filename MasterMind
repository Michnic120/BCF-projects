#include<iostream>
#include<string>
#include<vector>

using namespace std;

int main()
{
  vector<char> code = {'r','r','v','v'} , guess, hints;
  char c; short m=0, n=0, g;

  code.reserve(4); guess.reserve(4), hints.reserve(4);

cout<<"Enter the color\nr - red\nb - blue\ng - green\ny - yellow\nv - violet\no - orange\n   hints :   ";

            for(int i=0;i<4;i++) cout<<hints[i];
cout<<endl;

while(n<10)  // || n>10
    {
      for(int i=0;i<4;)
       {
        cin>>c;
        if(c=='r' || c=='b' || c=='g' || c=='y' || c=='v' || c=='o'){guess.push_back(c);i++;}
        else cout<<"Wrong color!"<<endl;
       }

      for(int i=0;i<4;i++)
        {
          if(guess[i] == code[i]) {hints[m] ='O';  m++;}
        }
        g=m;

       for(int i=0;i<4;i++)
          for(int j=0;j<4;j++)
            if(i!=j) if(guess[i] == code[j]) {hints[g]='o'; g++;}

    for(int i=0;i<4;i++)  if(hints[i]!= 'o' && hints[i]!= 'O') hints[i]='.';

       if(m==4) break;

        for(int i=0;i<4;i++) {cout<<hints[i];hints[i]='.';}
        cout<<endl<<"Try again"<<endl;
        guess.clear(); hints.clear();


        n++; m=0;
    }

}
